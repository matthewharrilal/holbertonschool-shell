#!/usr/bin/env bash
#This script is used to print out a clocks numbers separated by hours and minutes

current_hour=0
current_minute=1
max_minute=59
max_hour=12

while [ $current_minute -le $max_minute ] && [ $current_hour -le $max_hour ];
do
	echo "Hour: $current_hour"
	echo $current_minute

	if [ $current_minute -eq $max_minute ]; then
		$current_minute=1
		((current_hour++))
	else 
		((current_minute++))
	fi
done 
